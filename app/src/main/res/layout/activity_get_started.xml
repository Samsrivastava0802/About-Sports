<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.getstarted.GetStartedActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:layout_centerInParent="true"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONEFOOTBALL"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_welcome"
            android:textColor="@color/dark_yellow"
            android:textSize="26sp"
            />
        <TextView
            android:id="@+id/tv_lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stay_updated_on_all_the_goals_receive_real_time_match_notifications_fixtures_and_results_for_the_teams_you_love"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_text"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:maxLines="3"
            android:layout_marginTop="24dp"
            />

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lines"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background"
            android:text="Get Started"
            android:textSize="26sp"
            android:textAllCaps="false"/>


    </RelativeLayout>
</layout>